{
  "$id": "https://standards.zelzip.net/json-schemas/credits/contributor.1.0.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema",

  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "email": {
      "type": "string",
      "description": "A public contact email of the contributor",
      "format": "email"
    },
    "socialMedia": {
      "type": "object",
      "description": "Social media information",
      "properties": {
        "github": {
          "type": "string",
          "description": "The username of the contributor at GitHub"
        }
      }
    },
    "website": {
      "type": "string",
      "description": "The website of the contributor",
      "format": "uri"
    },
    "name": {
      "type": "string",
      "description": "A display name for the contributor"
    },
    "contributions": {
      "type": "array",
      "description": "List of the different contributions made by the contributor"
    }
  }
}
